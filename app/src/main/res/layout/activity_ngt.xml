<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.base.views.MyViewPager
        android:id="@+id/ngt_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </com.base.views.MyViewPager>

    <RadioGroup
        android:id="@+id/ngt_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_blue"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/ngt_rb1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/sl_ngt_rb1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="2dp"
            android:text="主页"
            android:textColor="@drawable/sl_ngt_text"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ngt_rb2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/sl_ngt_rb1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="2dp"
            android:text="主页"
            android:textColor="@drawable/sl_ngt_text"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ngt_rb3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/sl_ngt_rb1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="2dp"
            android:text="主页"
            android:textColor="@drawable/sl_ngt_text"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ngt_rb4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/sl_ngt_rb1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="2dp"
            android:text="主页"
            android:textColor="@drawable/sl_ngt_text"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ngt_rb5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/sl_ngt_rb1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="2dp"
            android:text="主页"
            android:textColor="@drawable/sl_ngt_text"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>