<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mylayoutbg"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/item_homerv_img"
        android:scaleType="fitXY"
        android:src="@mipmap/home_rv"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/myblack"
        android:textSize="12sp"
        android:text="ONLY含莱卡磨破做旧低腰牛仔裤女"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/myblack"
        android:textSize="12sp"
        android:text="T116149046"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/myred"
        android:textSize="12sp"
        android:text="￥ 274.50"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/myblack"
            android:textSize="12sp"
            android:text="已销售"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:textColor="@color/myblack"
            android:textSize="12sp"
            android:text="3610"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@mipmap/home_taoxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_item_favorite_img" />
    </LinearLayout>
</LinearLayout>