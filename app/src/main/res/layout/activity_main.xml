<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="11dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_classify_ic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/shape_f8f8f8_rectangle"
            android:gravity="center_vertical">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparency"
                android:gravity="center_vertical"
                android:hint="输入你想要的商品"
                android:paddingLeft="10dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/home_search_ic" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"

        android:layout_height="200dp">

        <com.base.views.MyViewPager
            android:id="@+id/home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue">

        </com.base.views.MyViewPager>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/home_rdbtn1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="3dp"
                android:background="@drawable/sl_viewpager_dot"
                android:button="@null"
                android:checked="false"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/home_rdbtn2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="3dp"
                android:background="@drawable/sl_viewpager_dot"
                android:button="@null"
                android:checked="false"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/home_rdbtn3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="3dp"
                android:background="@drawable/sl_viewpager_dot"
                android:button="@null"
                android:checked="false"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/home_rdbtn4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="3dp"
                android:background="@drawable/sl_viewpager_dot"
                android:button="@null"
                android:checked="false"
                android:visibility="gone" />
        </RadioGroup>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/home_clnz" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/home_xbss" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/home_nnxx" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/home_mytz" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#767676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="潮流女装"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#767676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="箱包首饰"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#767676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="男女鞋靴"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#767676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="母婴童装"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/home_mzgh" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/home_jdsm" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/home_jjjj" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/home_gdfl" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#767676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="美妆个护"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#767676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="家电数码"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#767676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="家居家具"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#767676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="更多分类"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </LinearLayout>


</LinearLayout>